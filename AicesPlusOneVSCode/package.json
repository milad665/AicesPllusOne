{
    "name": "aices-plus-one-vscode",
    "displayName": "Aices Plus One Architecture Context",
    "description": "Shows C4 architecture context for your current file",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.85.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "aices-explorer",
                    "title": "Architecture",
                    "icon": "resources/icon.svg"
                }
            ]
        },
        "views": {
            "aices-explorer": [
                {
                    "id": "aices-sidebar",
                    "name": "Current Context",
                    "type": "webview"
                }
            ]
        },
        "commands": [
            {
                "command": "aices.refresh",
                "title": "Refresh Context"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/node": "18.x",
        "@types/vscode": "^1.85.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "eslint": "^8.54.0",
        "typescript": "^5.3.2",
        "vscode-test": "^1.6.1"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "plantuml-encoder": "^1.4.0"
    }
}
