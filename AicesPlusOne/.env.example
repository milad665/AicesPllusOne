# Environment variables for the Git Repository Manager

# Database settings
DATABASE_PATH=repositories.db

# Repository settings
REPOSITORIES_DIR=repositories

# Synchronization settings (in minutes)
SYNC_INTERVAL_MINUTES=5

# API settings
API_HOST=0.0.0.0
API_PORT=8000

# Security settings
SSH_KEYS_DIR=/tmp/git_ssh_keys

# Analysis settings
CACHE_REFRESH_HOURS=1
MAX_DEPENDENCIES=50

# Logging settings
LOG_LEVEL=INFO
